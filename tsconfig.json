{
  "compilerOptions": {
    "noLib": false,
    "noImplicitAny": true,
    "removeComments": true,
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "**/*/dist"],
  "references": [
    {"path": "./packages/moronic-puppy"}
  ],
  "paths": {
    "@moronic-puppy/core": ["packages/moronic-puppy"]
  }
}
